<?xml version="1.0" encoding="utf-8"?>
<!-- This is the menu for the main activity. It contains two items: "Add Card" and "Clear Flashcards" -->
<menu xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This item is for adding a new flashcard. It shows an "add" icon and has the title "Add Card" -->
    <item
        android:id="@+id/action_add_card"
        android:icon="@android:drawable/ic_menu_add"
        android:title="Add Card"
        android:showAsAction="ifRoom"/>

    <!-- This item is for clearing all the flashcards. It shows a "delete" icon and has the title "Clear Flashcards" -->
    <item
        android:id="@+id/action_clear_flashcards"
        android:icon="@android:drawable/ic_menu_delete"
        android:title="Clear Flashcards"
        android:showAsAction="ifRoom"/>

</menu>